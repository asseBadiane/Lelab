
#:set s dp(150)

<CanvasExample1>:
    canvas:
        Line:
            points: (0, 0, self.width/8, 100, self.width/4, 0, self.width*3/8,100, self.width*3/6, 0, self.width*3/5, 100, self.width*6/8, 0, self.width*5/6, 100, self.width, 0)
            width: 2
            
        Rectangle:
            pos: self.center_x - s/2 , self.center_y - s/2
            size: s, s
        Ellipse:
            pos: self.center_x - s/2, self.center_y + s
            size: s, s/2

<CanvasExample2>:
    canvas:
        Line:
            points: (0, self.height/2, self.width, self.height/2)
            width: 2
        Line:
            points: (self.width/2, 0, self.width/2, self.height)
            width: 2   
        Line:
            points: (0, 0, self.width, self.height)
            width: 2 
        Line:
            points: (self.width, 0, 0, self.height)
            width: 2       
        Rectangle:
            pos: self.center_x + s/4 , self.center_y + s -dp(20)
            size: dp(100), dp(100)
        Rectangle:
            pos: self.center_x - s , self.center_y + s -dp(20)
            size: dp(100), dp(100)
        Ellipse:
            pos: self.center_x - s/2, self.center_y - s -dp(40)
            size: s, s/2
        Ellipse:
            pos: self.center_x - s*2 -dp(40), self.center_y - s +dp(20)
            size: s/2, s/2
        Ellipse:
            pos: self.center_x + s*2 -dp(40), self.center_y - s +dp(20)
            size: s/2, s/2
    
